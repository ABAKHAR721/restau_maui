<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="RestaurantApp.AppShell"
       xmlns:pages="clr-namespace:RestaurantApp.Pages">

	<ShellContent Title="Menu" ContentTemplate="{DataTemplate pages:MenuPage}" />

	<!-- Rends AddPlat visible via le code-behind -->
	<ShellContent x:Name="AddPlatShell"
                  Title="Ajouter"
                  ContentTemplate="{DataTemplate pages:AddPlatPage}" />

	<ShellContent Title="Commandes" ContentTemplate="{DataTemplate pages:CommandePage}" />

	<ShellContent Title="Profil" ContentTemplate="{DataTemplate pages:ProfilPage}" />

	<ShellContent Title="Connexion" ContentTemplate="{DataTemplate pages:LoginPage}" />
	<ShellContent Title="Inscription" ContentTemplate="{DataTemplate pages:RegisterPage}" />
</Shell>